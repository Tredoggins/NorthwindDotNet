@using Northwind.Models
@model IEnumerable<Discount>

<h2 class="mt-3"><i class="fas fa-tag"></i> Current Discounts</h2>
<div class="list-group">
    @foreach (Discount d in Model)
    {
        <h3 class="list-group-item">@d.Title - Code: @d.Code - @d.Description - <i style="opacity:.6;">Good Until: @d.EndTime.Month/@d.EndTime.Day/@d.EndTime.Year</i></h3>
    }
</div>